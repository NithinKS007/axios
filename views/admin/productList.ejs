<main class="main-wrap">
    <%- include('../layouts/adminLayouts/searchbar') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products List</h2>
                <p>Dashboard > Products</p>
            </div>
            <div>
                <a href="/admin/addproducts" class="btn btn-primary btn-sm rounded">Add Product</a>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row align-items-center">
                   
                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                        <select class="form-select">
                            <option selected>All category</option>
                            <option>Premium</option>
                            <option>Mens</option>
                            <option>Kids</option>
                            <option>Brand</option>
                            <option>Luxury</option>
                            <option>Casual</option>
                            <option>Sports</option>
                            <option>Analog</option>
                            <option>Digital</option>
                            <option>Hybrid</option>
                        </select>
                    </div>
                    <div class="col-md-2 col-6">
                        <select class="form-select">
                            <option selected>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Newly added</option>
                            <option>Show all</option>
                        </select>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Sl.No.</th>
                                <th scope="col">Product Image</th>
                                <th scope="col">ProductID</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Status</th>
                                <th scope="col">Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Example Data Row -->
                            <tr>
                                <th scope="col">1</th>
                                <td>
                                 image
                                </td>
                                <td>PID123456</td>
                                <td>Example Product Name</td>
                                <td>Example Category</td>
                                <td>$99.99</td>
                                <td>50</td>
                                <td>In Stock</td>
                                <td>
                                    <!-- editbutton -->
                                   <form action="customerlist?id=USER_ID_DELETE" method="post" style="display:inline;">

                                     <button type="submit" name="action" value="delete" class="btn btn-sm btn-danger">Edit</button>

                                    </form>
                                     <!-- deletebutton -->
                                    <form action="customerlist?id=USER_ID_DELETE" method="post" style="display:inline;">
                                        <button type="submit" name="action" value="delete" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                    
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        
